---
import { getCollection } from 'astro:content';
import { siteConfig } from '../../config';
import Footer from '../../components/Footer.astro';
import Moon from 'lucide-astro/Moon';
import Sun from 'lucide-astro/Sun';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={post.data.description || post.data.title}>
  <title>{post.data.title} - {siteConfig.title}</title>
  <script is:inline>
    const storedTheme = localStorage.getItem('theme');
    const systemPrefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
    const theme = storedTheme === 'dark' || storedTheme === 'light'
      ? storedTheme
      : (systemPrefersDark ? 'dark' : 'light');
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    }
  </script>
  
  <!-- Preload Critical Resources -->
  <link rel="preload" href="/fonts/fonts.css" as="style">
  <link rel="preload" href="/libs/katex/katex.min.css" as="style">
  <link rel="dns-prefetch" href="https://home.introl.top">

  <!-- CSS -->
  <link rel="stylesheet" href="/fonts/fonts.css">
  <link rel="stylesheet" href="/libs/katex/katex.min.css">
</head>
<body class="bg-paper text-ink dark:bg-night dark:text-moon antialiased min-h-screen selection:bg-accent selection:text-white font-sans">

  <!-- Error Message Container -->
  <div id="latex-error" class="hidden fixed top-4 right-4 z-50 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 shadow-lg rounded" role="alert">
      <p class="font-bold">渲染错误</p>
      <p>数学公式渲染失败，<button onclick="window.location.reload()" class="underline hover:text-red-800">刷新页面</button> 重试。</p>
  </div>

  <header class="w-full max-w-4xl mx-auto px-6 py-6 flex justify-end items-center">
    <nav class="space-x-6 text-sm opacity-70 flex items-center">
      {siteConfig.nav.map(item => (
        <a href={item.href} class="hover:text-accent transition-colors hover:underline underline-offset-4">{item.name}</a>
      ))}
      <button id="theme-toggle" aria-label="切换主题" class="ml-4 p-2 rounded-full border border-ink/10 dark:border-moon/10 bg-paper dark:bg-night hover:bg-ink/5 dark:hover:bg-moon/5 transition-all opacity-70 hover:opacity-100">
        <Moon class="w-4 h-4 block dark:hidden" />
        <Sun class="w-4 h-4 hidden dark:block" />
      </button>
    </nav>
  </header>

  <article class="w-full max-w-4xl px-6 pb-12 md:pb-20 mx-auto">

    <header class="mb-12">
      <a href="/" class="text-sm opacity-50 hover:text-accent transition-colors mb-6 inline-block">← 返回</a>
      <h1 class="text-3xl md:text-4xl font-serif font-bold tracking-tight mb-4 leading-tight">{post.data.title}</h1>
      <time class="text-sm uppercase tracking-widest opacity-50">{post.data.date}</time>
    </header>

    <div class="prose prose-lg max-w-none
                prose-headings:font-serif prose-headings:font-bold prose-headings:tracking-tight
                prose-h1:text-2xl md:prose-h1:text-3xl prose-h2:text-xl md:prose-h2:text-2xl prose-h3:text-lg md:prose-h3:text-xl prose-h4:text-base md:prose-h4:text-lg
                prose-p:text-[1.0625rem] prose-p:leading-[1.85] prose-p:mb-6 prose-p:font-sans
                prose-a:text-accent prose-a:no-underline prose-a:border-b prose-a:border-accent/30
                hover:prose-a:border-accent prose-a:transition-colors
                prose-blockquote:border-l-accent/30 prose-blockquote:italic prose-blockquote:opacity-80 prose-blockquote:font-sans
                prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:font-mono prose-code:text-accent dark:prose-code:text-accent
                prose-code:before:content-none prose-code:after:content-none prose-code:font-normal
                prose-pre:bg-transparent dark:prose-pre:bg-transparent prose-pre:border prose-pre:border-ink/10 dark:prose-pre:border-moon/10
                prose-pre:rounded-sm prose-pre:p-4 prose-pre:font-mono
                [&_pre_code]:p-0 [&_pre_code]:rounded-none
                prose-img:rounded-sm
                prose-li:font-sans
                prose-table:border-collapse prose-th:text-left prose-th:py-2 prose-td:py-2 prose-th:font-sans prose-td:font-sans
                prose-tr:border-b prose-tr:border-ink/10 dark:prose-tr:border-moon/10
                dark:prose-invert">
      <Content />
    </div>

    <section class="mt-12 border-t border-ink/10 dark:border-moon/10 pt-6 text-sm">
      <p class="font-serif opacity-70">
        本文采用
        <a
          href="https://creativecommons.org/licenses/by-nc/4.0/"
          target="_blank"
          rel="license noopener noreferrer"
          class="text-accent hover:underline underline-offset-4"
        >
          CC BY-NC 4.0
        </a>
        与
        <a
          href="https://github.com/zTrix/sata-license"
          target="_blank"
          rel="license noopener noreferrer"
          class="text-accent hover:underline underline-offset-4"
        >
          SATA
        </a>
        许可协议，转载请注明出处并保持非商业用途。
      </p>
    </section>

    <Footer class="mt-16" showHomeLink={true} />

  </article>

  <!-- External Scripts (Deferred) -->
  <script defer src="/libs/katex/katex.min.js"></script>
  <script defer src="/libs/katex/auto-render.min.js"></script>
  <script defer src="/libs/pangu/pangu.min.js"></script>
  <script async src="https://home.introl.top:3000/script.js" data-website-id="a6b387d0-5202-4a25-b28c-b4d24b78e8fd"></script>

  <script>
    // Logic Script
    document.addEventListener('DOMContentLoaded', () => {
      // Theme Toggle Logic
      const toggle = document.getElementById('theme-toggle');
      const html = document.documentElement;
      const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');

      const getStoredTheme = () => {
        const stored = localStorage.getItem('theme');
        return stored === 'dark' || stored === 'light' ? stored : null;
      };

      const applyTheme = (value) => {
        html.classList.toggle('dark', value === 'dark');
      };

      const storedTheme = getStoredTheme();
      applyTheme(storedTheme ?? (mediaQuery.matches ? 'dark' : 'light'));

      const handleSystemChange = (event) => {
        if (getStoredTheme()) return;
        applyTheme(event.matches ? 'dark' : 'light');
      };

      if (typeof mediaQuery.addEventListener === 'function') {
        mediaQuery.addEventListener('change', handleSystemChange);
      } else if (typeof mediaQuery.addListener === 'function') {
        mediaQuery.addListener(handleSystemChange);
      }

      if (toggle) {
        toggle.addEventListener('click', () => {
          const isDark = html.classList.toggle('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
      }

      // Code block cleanup
      document.querySelectorAll('pre > code').forEach((codeBlock) => {
        if (codeBlock.firstChild && codeBlock.firstChild.nodeType === Node.TEXT_NODE) {
          const text = codeBlock.firstChild.textContent;
          if (text && text.startsWith('\n')) {
            codeBlock.firstChild.textContent = text.replace(/^\n/, '');
          }
        }
      });

      // --- Performance & Optimization Logic ---

      const waitForScript = (globalVar, timeout = 5000) => {
        return new Promise((resolve, reject) => {
          if (window[globalVar]) return resolve();
          const start = Date.now();
          const interval = setInterval(() => {
            if (window[globalVar]) {
              clearInterval(interval);
              resolve();
            } else if (Date.now() - start > timeout) {
              clearInterval(interval);
              reject(new Error(`Timeout waiting for ${globalVar}`));
            }
          }, 50);
        });
      };

      const renderLaTeX = async () => {
        try {
          await Promise.all([
            waitForScript('katex'),
            waitForScript('renderMathInElement')
          ]);
          
          const prose = document.querySelector('.prose');
          if (prose && window.renderMathInElement) {
            window.renderMathInElement(prose, {
              delimiters: [
                {left: "$$", right: "$$", display: true},
                {left: "$", right: "$", display: false},
                {left: "\\(", right: "\\)", display: false},
                {left: "\\[", right: "\\]", display: true}
              ],
              throwOnError: false,
              strict: false
            });
            console.log('LaTeX rendered successfully');
          }
        } catch (e) {
          console.error('LaTeX render error:', e);
          const errorDiv = document.getElementById('latex-error');
          if (errorDiv) errorDiv.classList.remove('hidden');
        }
      };

      const applyPangu = async () => {
        try {
          await waitForScript('pangu');
          const prose = document.querySelector('.prose');
          if (prose && window.pangu) {
            if (typeof window.pangu.spacingNode === 'function') {
              window.pangu.spacingNode(prose);
            } else if (typeof window.pangu.spacingElementByClassName === 'function') {
              window.pangu.spacingElementByClassName('prose');
            }
            console.log('Pangu spacing applied');
          }
        } catch (e) {
          console.error('Pangu error:', e);
        }
      };

      // Execute optimizations
      const initOptimizations = () => {
        renderLaTeX();
        applyPangu();
      };

      if ('requestIdleCallback' in window) {
        requestIdleCallback(initOptimizations);
      } else {
        setTimeout(initOptimizations, 100);
      }
    });
  </script>

  <style>
    body {
      transition: background-color 0.3s, color 0.3s;
    }

    pre {
      white-space: pre;
    }

    pre code {
      display: block;
      font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
      font-size: 0.875rem;
      line-height: 1.6;
    }

    pre code::before,
    pre code::after {
      content: none;
    }

    .katex {
      font-size: 1.1em;
    }

    .katex-display {
      margin: 1.5rem 0;
    }
  </style>
</body>
</html>